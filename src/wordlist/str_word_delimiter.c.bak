/*---------------------------------------------------------------------------
|
|        The inter-word delimiter for space-delimited word lists
|
|--------------------------------------------------------------------------*/

#include "common.h"
#include "wordlist.h"

/*-----------------------------------------------------------------------------------------
|
|  Str_Delimiter
|
|  In word string, words are seprated by spaces or newlines.
|
------------------------------------------------------------------------------------------*/

PUBLIC BIT Str_Delimiter(U8 ch)
{
   if( ch == ' ' || ch == '\r' || ch == '\n' || (Str_DiceComposites && ch == '.') )
      { return 1; }
   else
      { return 0; }
}

